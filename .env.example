# NOTE: Robinhood credentials are now entered via web login screen
# No need to configure ROBINHOOD_USERNAME or ROBINHOOD_PASSWORD here

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret

# Redis Configuration (Optional - app works without Redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_ENABLED=true

# Database
DATABASE_PATH=data/trading.db

# Cache TTLs (seconds)
CACHE_TTL_MARKET_DATA=300
CACHE_TTL_NEWS=600
CACHE_TTL_QUOTE=60

# NOTE: Trading settings (Take Profit, Stop Loss, Max Position Size, Market Hours Check)
# are now configured via the Settings page (⚙️ tab) in the web interface

# Monitoring
POSITION_CHECK_INTERVAL=30

# AI Configuration
AI_MODEL_ID=us.anthropic.claude-sonnet-4-5-20250929-v1:0
AI_MAX_TOKENS=2000
BATCH_ANALYSIS_SIZE=10

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
